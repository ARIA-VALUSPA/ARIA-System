<?xml version="1.0"?>
<model about="urn:fr.telecom-paristech:ARIA-VALUSPA:demo"
		xmlns="http://www.cs.wpi.edu/~rich/d4g"
       xmlns:t="http://www.cs.wpi.edu/~rich/cetask/cea-2018-ext">

<!-- This is a simple demo scenario for the ARIA-VALUSPA project. -->	   

<!-- Initialization script. -->
   
<t:script init="true"> 

	var inputPath = "/DiscoScenarios/FML/Demo/"

	
</t:script>

<t:task id="Top">
	<t:subtasks id="subTop">
		<t:step name="welcome" task="Welcome"/>
		<t:step name="presentation" task="Presentation"/> 
		<t:step name="goodbye" task="GoodBye"/> 
	</t:subtasks>
</t:task>

<!-- Tree level 2. -->

<agent  id="Welcome" text="{inputPath}Welcome.xml" >
	<user text="Nice"/> 
</agent>

<agent  id="Presentation" text="{inputPath}Presentation.xml" >
	<user text="I see"/> 
</agent>

<agent  id="GoodBye" text="{inputPath}GoodBye.xml" >
	<user text="Thanks"/> 
</agent>

</model>
